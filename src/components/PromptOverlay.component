<apex:component id="PromptOverlay" controller="PromptOverlayController" allowDML="true">

	<apex:includeScript value="{!URLFOR($Resource.Overlays, 'inc/js/overlays.js')}" />
	<apex:stylesheet value="{!URLFOR($Resource.Overlays, 'inc/css/overlays.css')}" />			
   	
   	<apex:attribute name="includeNewTask" 
					description="Flag to include new task component"
					type="boolean" 
					assignTo="{!includeNewTask}" 
					required="false"/>	
			
	<apex:attribute name="includeNewMilestone" 
					description="Flag to include new milestone component"
					type="boolean" 
					assignTo="{!includeNewMilestone}" 
					required="false"/>				
								
	<script>
	
		promptOverlay.id = '{!$Component.Content}';
		
	</script>
	
	<!-- Content -->
	<apex:outputPanel id="Content"
		styleClass="content"
		layout="block"
		style="display:none">
		
		<apex:outputPanel id="Background" styleClass="background" layout="block"> &nbsp; </apex:outputPanel>
		
			<!-- Overlay -->
			<apex:outputPanel id="Overlay"
				styleClass="overlay"
				layout="block">
			
				<!-- Component -->
				<apex:outputPanel id="Components"
					styleClass="component"
					layout="block">
			
					<apex:outputPanel rendered="{!includeNewTask}">
						 	<c:NewTask id="NewTask" /> 
					</apex:outputPanel>
					
					<apex:outputPanel rendered="{!includeNewMilestone}">
						 	<c:NewMilestone id="NewMilestone" /> 
					</apex:outputPanel>
			
				</apex:outputPanel>
				<!-- end of Component -->
				
			</apex:outputPanel>
			<!-- end of Overlay -->
		
	</apex:outputPanel>
	<!-- end of Content -->

</apex:component>