<apex:component controller="TaskQuickAccessController">
    
    <apex:styleSheet value="{!URLFOR($Resource.ProjectResources, 'inc/css/TaskQuickAccess.css')}" />
	<apex:includeScript value="{!URLFOR($Resource.ProjectResources, 'inc/js/TaskQuickAccess.js')}" />
	
	<div class="quickAccessTask">
        <apex:form id="quickAccessForm">
            <span>Task ID:</span>
            <apex:inputText value="{!taskId}" onkeyup="handleKeyPress(event)" />
            <apex:actionFunction name="quickAccessToTask" action="{!go}" rerender="quickAccessForm" />
            <span class="taskIdInputWrapper">
            	<a href="Javascript:;" class="actionQuickAccess" onclick="hideQuickAccessError(); quickAccessToTask(this);">Go</a>
            </span>
            <apex:outputPanel styleClass="quickAccessError" rendered="{!error}">
            	<br/>Error: Task does not exist
            </apex:outputPanel>
        </apex:form>
    </div>
    
</apex:component>